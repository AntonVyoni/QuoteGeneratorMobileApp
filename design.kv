<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    RetrievePasswordScreen:
        name: "retrieve_password_screen"
    SignSuccess:
        name: "sign_up_success"
    LoginScreenSuccess:
        name: "login_screen_success"

<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "Welcome!"
                font_size: '26sp'
            TextInput:
                id:username
                hint_text: "Username"
            TextInput:
                id:password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint:{'center_x':0.5, 'center_y': 0.6}
            Label:
                id:login_info
                text:""

        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1,0.7,1,1
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1,0.7,1,1
<LoginScreenSuccess>:
    GridLayout:
        cols:1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'logoutbutton/logout_hover.png' if self.hovered else 'logoutbutton/logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y':0.8}
                
        Label:
            text: "How do you feel?"
            font_size: '26sp'
        TextInput:
            id:feeling
            hint_text: "Try happy, sad or unloved"
        RelativeLayout:
            Button:
                text: "Make my day"
                on_press: root.get_quote(root.ids.feeling.text)
                size_hint: 0.6, 0.4
                pos_hint:{'center_x':0.5, 'center_y': 0.95}
        ScrollView:
            Label:
                id:quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
        

<SignUpScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 20, 20
            spacing: 20, 20
            Label:
                text: "Sign Up"
            TextInput:
                id: sign_username
                hint_text: "username"
            TextInput:
                id: sign_password
                password: True
                hint_text: "Password"
            TextInput:
                id: pass_verify
                password: True
                hint_text: "Repeat password"
            Label:
                id:sign_up_info
                text:""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Back"
                on_press: root.go_back()
            Button:
                text: "Sumbit"
                on_press: root.add_user(root.ids.sign_username.text, root.ids.sign_password.text, root.ids.pass_verify.text)
            
<SignSuccess>:
    GridLayout:
        cols: 1
        Label:
            text:"Your registration was successful!"
        RelativeLayout:
            Button:
                text: "Login"
                on_press: root.go_login()
                size_hint: 0.3, 0.2
                pos_hint:{'center_x':0.5, 'center_y': 0.4}

<RetrievePasswordScreen>:
    GridLayout:
        cols: 1
        Label: 
            text:"Retrieve password"
        TextInput:
            hint_text: "enter your username"
        Button:
            text: "Submit"
        Button:
            text: "Back"
            